{
  "$schema": "https://biomejs.dev/schemas/1.9.0/schema.json",
  "files": {
    "include": ["src/**/*.tsx", "src/**/*.ts", "src/**/*.astro"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "tab"
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noArrayIndexKey": "warn"
      },
      "correctness": {
        "useExhaustiveDependencies": "off"
      },
      "nursery": {
        "useSortedClasses": {
          "options": {
            "attributes": ["className", "class"]
          },
          "fix": "safe",
          "level": "off"
        }
      },
      "style": {
        "noNonNullAssertion": "off"
      },
      "complexity": {
        "noForEach": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  }
}
