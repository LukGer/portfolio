---
import { CalendarIcon } from "lucide-react";
import Header from "../components/Header.astro";
import Layout from "./Layout.astro";

const { exploration } = Astro.props;

const date = new Date(exploration.data.date);
---

<Layout title={exploration.data.title}>
  <Header />
  <div class="my-12 w-full flex flex-col items-center">
    <div class="self-end flex flex-row items-center gap-2">
      <CalendarIcon size={14} />

      <span class="font-bold text-xs">
        {date.toLocaleDateString(undefined, { dateStyle: "short" })}
      </span>
    </div>
    <div class="prose">
      <slot />
    </div>
  </div>
</Layout>
