---
import { Image } from "astro:assets";
import { SquareArrowOutUpRightIcon } from "lucide-react";
---

<footer class="flex flex-col bg-black">
  <div class="h-6 w-full bg-background rounded-b-full"></div>
  <div
    class="flex flex-col gap-6 md:gap-0 md:flex-row md:items-center px-12 py-12 text-white font-mono"
  >
    <div class="flex flex-col gap-4">
      <span class="text-sm">(c) Lukas Gerhold - 2024</span>

      <div class="flex flex-row items-center gap-8">
        <a href="/imprint" class="text-gray-400 text-sm">Imprint</a>
      </div>
    </div>

    <div class="flex-1"></div>

    <div class="flex flex-col gap-2">
      <div class="flex flex-row items-center">
        <span class="text-xs">This page was made using</span>

        <Image
          src="/astro-logo-light.svg"
          height={24}
          width={16}
          alt="Astro Logo"
          class="h-6 w-auto"
        />
      </div>
      <span class="text-xs">
        The code can be found on
        <a
          href="https://github.com/LukGer/portfolio"
          target="_blank"
          rel="noreferrer"
          class="inline-flex flex-row items-center gap-2 text-primary"
        >
          <span>Github</span>
          <SquareArrowOutUpRightIcon size={12} />
        </a>
      </span>
    </div>
  </div>
</footer>
