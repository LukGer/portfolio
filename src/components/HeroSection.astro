---
import { Image } from "astro:assets";
import { ChevronDownIcon } from "lucide-react";
import meDithered from "../../public/me_dithered.jpg";
import HeroImage from "./HeroImage";
import { CodeText } from "./ui/CodeText";
import { CreativityText } from "./ui/CreativityText";
---

<section class="h-screen flex flex-col gap-8 md:gap-12 py-12 items-center">
  <div class="flex-1 flex flex-col-reverse md:flex-row items-center gap-4">
    <div
      class="flex flex-col gap-8 animate-fade-in-up flex-1 font-mono text-black"
    >
      <span class="text-2xl md:text-4xl" style="animation-delay: 0.6s">
        Hi, I'm Lukas <br />
        a Developer and Designer from Austria.
      </span>
      <span class="text-2xl md:text-4xl" style="animation-delay: 0.8s">
        I build engaging digital experiences, blending <CodeText client:load />
        with <CreativityText client:load />.
      </span>
    </div>

    <div
      class="animate-fade-in-up max-w-md h-full hero-image-shadow"
      style="animation-delay: 0.4s"
    >
      <div class="hidden md:block overflow-hidden rounded-lg">
        <HeroImage client:load />
      </div>
      <div class="md:hidden h-full overflow-hidden rounded-lg">
        <Image
          src={meDithered}
          alt="me"
          width={300}
          height={400}
          class="w-full h-full object-cover"
        />
      </div>
    </div>
  </div>
  <div class="flex flex-col items-center justify-center">
    <ChevronDownIcon className="size-8 animate-bounce" />
  </div>
</section>

<style>
  .hero-image-shadow {
    filter: drop-shadow(0 25px 12px rgba(101, 163, 13, 0.4));
  }
</style>
