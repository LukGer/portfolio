---
import { Image } from "astro:assets";
import meDithered from "../../public/me_dithered.jpg";
import { CodeText } from "./CodeText";
import { CreativityText } from "./CreativityText";
import HeroImage from "./HeroImage";
---

<section
  class="flex-1 flex md:flex-row-reverse flex-col gap-8 md:gap-12 py-12 items-center"
>
  <div
    class="animate-fade-in-up max-w-md hero-image-shadow rounded-lg overflow-hidden"
    style="animation-delay: 0.4s"
  >
    <div class="hidden md:block">
      <HeroImage client:load />
    </div>
    <div class="md:hidden">
      <Image src={meDithered} alt="me" width={300} height={400} />
    </div>
  </div>

  <div
    class="flex flex-col gap-8 animate-fade-in-up flex-1 text-4xl font-mono text-black"
    style="animation-delay: 0.4s"
  >
    <span>
      Hi, I'm Lukas <br />
      a Developer and Designer from Austria.
    </span>
    <span>
      I build engaging digital experiences, blending <CodeText client:load />
      with <CreativityText client:load />.
    </span>
  </div>
</section>

<style>
  .hero-image-shadow {
    filter: drop-shadow(0 25px 12px rgba(101, 163, 13, 0.4));
  }
</style>
