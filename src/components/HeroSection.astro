---
import { Image } from "astro:assets";
import meDithered from "../../public/me_dithered.jpg";
import HeroImage from "./HeroImage";
---

<section
  class="flex-1 flex md:flex-row-reverse flex-col gap-8 md:gap-12 py-12 items-center"
>
  <div class="fade-in-up max-w-md" style="animation-delay: 0.4s">
    <div class="hero-image-shadow rounded-lg overflow-hidden">
      <div class="hidden md:block">
        <HeroImage client:load />
      </div>
      <div class="md:hidden">
        <Image src={meDithered} alt="me" width={300} height={400} />
      </div>
    </div>
  </div>

  <div
    class="flex flex-col gap-8 fade-in-up flex-1"
    style="animation-delay: 0.4s"
  >
    <span class="text-4xl font-mono">
      Hi, I'm Lukas <br />
      a Developer and Designer from Austria.
    </span>
    <span class="text-4xl font-mono">
      I build engaging digital experiences, blending code with creativity.
    </span>
  </div>
</section>

<style>
  .hero-image-shadow {
    filter: drop-shadow(0 25px 12px rgba(101, 163, 13, 0.4));
  }
</style>
