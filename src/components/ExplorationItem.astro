---
interface Props {
  exploration: {
    slug: string;
    title: string;
    description: string;
    date: string;
    tags: string[];
  };
}

const { exploration } = Astro.props;
---

<a href={"/explorations/" + exploration.slug} class="flex flex-col gap-2">
  <div class="flex flex-row items-center">
    <h2 class="text-2xl font-bold">{exploration.title}</h2>

    <div class="flex-1"></div>

    <p class="text-gray-500">{exploration.date}</p>
  </div>

  <p>{exploration.description}</p>
  <div class="flex gap-2">
    {
      exploration.tags.map((tag) => (
        <span class="text-sm bg-gray-200 px-2 py-1 rounded uppercase">
          {tag}
        </span>
      ))
    }
  </div>
</a>
